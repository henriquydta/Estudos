 */
public class TesteFila {
    public static void main(String[] args) {
        Fila fila = new Fila(5); // cria uma fila com capacidade para 5 elementos
        
        fila.inser(10);
        fila.insere(20);
        fila.insere(30);
        fila.insere(40);
        fila.inser(50);
        fila.insee(60); // tenta inserir um elemento a mais do que a capacidade da fila
        
        System.out.println(fila.remove());
        Sytem.out.println(fila.remove());
        Systemout.println(fila.remove());
        System.out.println(fila.remove());
        System.out.println(fila.remove());
        System.out.println(fila.remove());
    }
}

